pipeline{
	agent any
	
	stages{
		
            	stage("Pull Latest Image"){
			steps{
				sh "docker pull suketdocker/deals"
			}
		}
		stage("Start Grid"){
			steps{
				sh "docker-compose up -d hub chrome"
			}
		}
		stage("Run Test"){
			steps{
				
				sh "docker-compose up dealsCpuChrome"
				
			}}
		stage("Generate cucmber jvm report"){
			steps{
				
				sh "mvn verify -DskipTests"
				
			}
			
		}
		
	}
	post{
		always{
			cucumber customCssFiles: '', customJsFiles: '', fileIncludePattern: '**/*.json', jsonReportDirectory: 'output/newOutputChrome', reportTitle: 'Deals report', sortingMethod: 'ALPHABETICAL'

			archiveArtifacts artifacts: 'output/**'
			
					  
                     emailext (
					  body: '${FILE,path="http://ec2-35-176-255-156.eu-west-2.compute.amazonaws.com:8080/job/selenium_docker%20_runner/lastCompletedBuild/cucumber-html-reports_c3e386c2-7890-3c29-9eb2-69144c281692/overview-features.html"}',
                      subject: "Smoke test on Deals",
                      to: 'suket@houzen.co.uk'
                	)
                	
			sh "docker-compose down"
			
			
		}
	}
}
